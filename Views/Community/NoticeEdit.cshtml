@model HNS.Entities.Notice
@{
    ViewData["Title"] = "Notice Edit";

}

<div class="sub_content notice">
    <div class="_inner">
        <form asp-action="NoticeEdit" asp-controller="Community" method="post">
            <input type="hidden" asp-for="Id" />
            <table class="notwrite_tbl">
                <colgroup>
                    <col width="14%" />
                    <col />
                </colgroup>
                <tr>
                    <th scope="row">작성자</th>
                    <td><span class="name">HNS</span></td>
                </tr>
                <tr>
                    <th scope="row">제목</th>
                    <td>
                        <input type="text" asp-for="m_title" maxlength="200" class="subject" required />
                        <input type="checkbox" asp-for="m_important" /> 중요
                    </td>
                </tr>
                <tr>
                    <th scope="row" class="vt">설명</th>
                    <td>
                        <textarea id="explanation" asp-for="m_explanation" class="desc noresize" rows="5" required></textarea>
                    </td>
                </tr>
                <tr>
                    <th scope="row" class="vt">내용</th>
                    <td>
                        <textarea id="description" asp-for="m_content" class="desc noresize" rows="5" required></textarea>
                    </td>
                </tr>
            </table>

            @if (Model?.Id > 0)
            {
                <!-- 수정일 경우 -->
                <div class="notwrite_bot">
                    <button type="submit" class="write">수정</button>
                    <a href="@Url.Action("Notice", "Community")" class="cancel">취소</a>
                </div>
            }
            else
            {
                <div class="notwrite_bot">
                    <button type="submit" class="write">작성</button>
                    <a href="@Url.Action("Notice", "Community")" class="cancel">취소</a>
                </div>
            }
            <!-- .go_pop : 게시판 비밀번호 팝업 창 클래스 // 팝업 창 코드는 푸터 위에 -->
            <!-- //수정일 경우 -->
        </form>
    </div>
    <!-- 서브에만 들어가는 탑 버튼-->
    <a href="#" class="go_top"><img src="~/template/images/go_top.png" alt="맨 위로"></a>
</div><!-- //sub_content -->
<!-- //서브 컨텐츠 // 이 아래부터 공통 -->

@section Scripts
    {
    <script src="~/lib/ckeditor/ckeditor.js"></script>

    <script>
        $(function () {
            CKEDITOR.replace('description');
        })
    </script>

}