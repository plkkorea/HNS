@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Areas/Admin/Views/Shared/_DefaultLayout.cshtml";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Login</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Home" asp-action="Login" asp-area="Admin" method="post">
                    <div class="row">
                        <div class="col-md-4 pl-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Password</label>
                                <input type="password" name="password" class="form-control" placeholder="Password">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-info btn-fill pull-right">Login</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
    
</div>